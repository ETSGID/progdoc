let notas = 0;
let pulsado = 0;
let pulsado2 = false;
//se utiliza para disparar el evento de onbeforeunload
let activado = true;
function mostrar(id){
    //solo dejo un select picker activo a la vez
    if( pulsado === 0 && document.getElementsByClassName("selectpicker").length === 0){ 
        pulsado =1;
        //en asingacions se guardan las que quieras que aparezcan seleccionadas
